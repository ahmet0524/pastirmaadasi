---
// src/layouts/AdminLayout.astro
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const pageTitle = `${title} - Admin Panel`;
---

<BaseLayout title={pageTitle}>
  <nav class="admin-nav">
    <div class="nav-container">
      <a href="/admin" class="nav-logo">üõçÔ∏è Admin Panel</a>
      <div class="nav-links">
        <a href="/admin/products">üì¶ √úr√ºnler</a>
        <a href="/admin/products/new">‚ûï Yeni √úr√ºn</a>
        <a href="/">üè† Ana Sayfa</a>
      </div>
    </div>
  </nav>

  <div class="admin-content">
    <slot />
  </div>
</BaseLayout>

<style>
  .admin-nav {
    background: white;
    border-bottom: 2px solid #e5e7eb;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: #134e4a;
    text-decoration: none;
    transition: color 0.3s;
  }

  .nav-logo:hover {
    color: #0891b2;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: #374151;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s;
    padding: 0.5rem 1rem;
    border-radius: 8px;
  }

  .nav-links a:hover {
    color: #0891b2;
    background: #f0fdfa;
  }

  .admin-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    min-height: calc(100vh - 200px);
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
    }

    .nav-links a {
      width: 100%;
      text-align: center;
    }

    .admin-content {
      padding: 1rem;
    }
  }
</style>