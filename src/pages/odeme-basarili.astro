  border-radius: 20px;
  padding: 3rem;
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0,0,0,0.3);
}

.success-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 2rem;
  background: #10b981;
  border-radius: 50%;
