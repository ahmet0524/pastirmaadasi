}

.label {
  font-weight: 600;
  color: #4b5563;
}

.value {
  color: #1f2937;
  font-weight: 500;
}

.status-success {
  color: #10b981;
}

.success-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-bottom: 2rem;
}

.btn {
  padding: 0.75rem 2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s;
}

.btn-primary {
  background: #667eea;
  color: white;
}

.btn-primary:hover {
