  margin-bottom: 1rem;
}

.empty-cart p {
  font-size: 1.1rem;
  color: var(--teal-700, #0f766e);
  margin-bottom: 2rem;
}

.hidden {
  display: none !important;
}

/* Summary Card */
.summary-card {
  background: white;
  padding: 2rem;
