      return;
    }

    if (taxNumber.length !== 10 || !/^\d{10}$/.test(taxNumber)) {
      alert('Vergi numarasƒ± 10 haneli olmalƒ±dƒ±r!');
      return;
    }
  }

  // ‚úÖ YENƒ∞: Fatura adresi kontrol√º
  const differentBillingCheckbox = document.getElementById('different-billing-address') as HTMLInputElement;
  const isDifferentBilling = differentBillingCheckbox?.checked || false;

  let billingAddress = address;
  let billingCity = city;
  let billingZipcode = zipcode;

  if (isDifferentBilling) {
    const billingAddressInput = document.getElementById('billing-address') as HTMLTextAreaElement;
    const billingCitySelect = document.getElementById('billing-city') as HTMLSelectElement;
    const billingZipcodeInput = document.getElementById('billing-zipcode') as HTMLInputElement;

    billingAddress = billingAddressInput?.value.trim() || '';
    billingCity = billingCitySelect?.value.trim() || '';
    billingZipcode = billingZipcodeInput?.value.trim() || '38000';

    if (!billingAddress || !billingCity) {
      alert('L√ºtfen fatura adres bilgilerini doldurun!');
      return;
    }
  }

  // ‚úÖ YENƒ∞: Sipari≈ü notu
  const orderNoteInput = document.getElementById('order-note') as HTMLTextAreaElement;
  const orderNote = orderNoteInput?.value.trim() || '';

  if (!email || !name || !surname || !phone || !identity || !address || !city) {
    alert('L√ºtfen t√ºm zorunlu alanlarƒ± doldurun!');
    return;
  }

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailRegex.test(email)) {
    alert('L√ºtfen ge√ßerli bir e-posta adresi girin!');
    return;
  }

  const cleanedPhone = formatPhone(phone);
  if (cleanedPhone.length !== 10) {
    alert('Telefon numarasƒ± 10 haneli olmalƒ±dƒ±r (0 olmadan)!\n√ñrnek: 5XX XXX XX XX');
    return;
  }

  if (identity.length !== 11 || !/^\d{11}$/.test(identity)) {
    alert('TC Kimlik numarasƒ± 11 haneli olmalƒ±dƒ±r!');
    return;
  }

  // Bilgileri kaydet
  localStorage.setItem('lastOrderEmail', email);
  localStorage.setItem('lastOrderName', name);
  localStorage.setItem('lastOrderSurname', surname);
  localStorage.setItem('lastOrderPhone', cleanedPhone);
  localStorage.setItem('lastOrderIdentity', identity);
  localStorage.setItem('lastOrderAddress', address);
  localStorage.setItem('lastOrderCity', city);
  localStorage.setItem('lastOrderZipcode', zipcode);
  localStorage.setItem('lastOrderCart', JSON.stringify(cart));
  localStorage.setItem('lastOrderCoupons', JSON.stringify(appliedCoupons));

  // ‚úÖ YENƒ∞ ALANLAR - Adres ba≈ülƒ±ƒüƒ± kaldƒ±rƒ±ldƒ±
  localStorage.setItem('lastOrderInvoiceType', invoiceType);
  if (invoiceType === 'corporate') {
    localStorage.setItem('lastOrderCompanyName', companyName);
    localStorage.setItem('lastOrderTaxOffice', taxOffice);
    localStorage.setItem('lastOrderTaxNumber', taxNumber);
  }
  localStorage.setItem('lastOrderNote', orderNote);

  // ‚úÖ Fatura adresi
  localStorage.setItem('lastOrderDifferentBilling', isDifferentBilling.toString());
  if (isDifferentBilling) {
    localStorage.setItem('lastOrderBillingAddress', billingAddress);
    localStorage.setItem('lastOrderBillingCity', billingCity);
    localStorage.setItem('lastOrderBillingZipcode', billingZipcode);
  }

  const btn = document.getElementById('checkout-btn') as HTMLButtonElement;
  const btnText = document.getElementById('checkout-btn-text');

  if (!btn || !btnText) return;

  btn.disabled = true;
  btnText.textContent = '‚è≥ √ñdeme hazƒ±rlanƒ±yor...';

  const subtotal = calculateSubtotal();
  const shipping = subtotal >= 1000 ? 0 : 50;
  const totalDiscount = calculateTotalDiscount(subtotal);

  const items = cart.map((item, i) => ({
    id: `ITEM_${i + 1}`,
    name: item.name,
    category1: 'Et √úr√ºnleri',
    price: (item.price * item.quantity).toFixed(2),
    quantity: item.quantity,
    unit: item.unit
  }));

  const buyer = {
    name,
    surname,
    email,
    gsmNumber: `+90${cleanedPhone}`,
    identityNumber: identity,
    registrationAddress: `${address}, ${city}`,
    ip: '85.34.78.112',
    city: city,
    country: 'Turkey',
    zipCode: zipcode,
  };

  const shippingAddress = {
    contactName: `${name} ${surname}`,
    city: city,
    country: 'Turkey',
    address: `${address}, ${city}`,
    zipCode: zipcode,
  };

  const billingAddressObj = {
    contactName: invoiceType === 'corporate' ? companyName : `${name} ${surname}`,
    city: billingCity,
    country: 'Turkey',
    address: `${billingAddress}, ${billingCity}`,
    zipCode: billingZipcode,
  };

  // ‚úÖ KAPIDA √ñDEME veya HAVALE - Direkt sipari≈ü olu≈ütur
  if (paymentMethod === 'cash-on-delivery' || paymentMethod === 'bank-transfer') {
    try {
      const response = await fetch('/api/create-cash-order', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          customerName: `${name} ${surname}`,
          customerEmail: email,
          customerPhone: cleanedPhone,
          customerIdentity: identity,
          customerAddress: address,
          customerCity: city,
          customerZipcode: zipcode,
          items: cart,
          subtotal,
          shipping,
          total: subtotal + shipping - totalDiscount,
          invoiceType,
          companyName,
          taxOffice,
          taxNumber,
          orderNote,
          appliedCoupons,
          billingAddress: isDifferentBilling ? billingAddress : address,
          billingCity: isDifferentBilling ? billingCity : city,
          billingZipcode: isDifferentBilling ? billingZipcode : zipcode,
          isDifferentBilling,
          paymentMethod
        }),
      });

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.error || 'Sipari≈ü olu≈üturulamadƒ±');
      }

      const data = await response.json();

      if (data.success) {
        // Sepeti temizle
        localStorage.removeItem('cart');
        localStorage.removeItem('appliedCoupons');

        // Ba≈üarƒ± sayfasƒ±na y√∂nlendir
        const successPage = paymentMethod === 'bank-transfer'
          ? `/odeme-basarili-havale?orderNumber=${data.orderNumber}`
          : `/odeme-basarili-kapida?orderNumber=${data.orderNumber}`;
        window.location.href = successPage;
      } else {
        throw new Error(data.error || 'Sipari≈ü olu≈üturulamadƒ±!');
      }
    } catch (err) {
      console.error('‚ùå Sipari≈ü hatasƒ±:', err);
      const errorMessage = err instanceof Error ? err.message : 'Bilinmeyen bir hata olu≈ütu';
      alert('Sipari≈ü Hatasƒ±: ' + errorMessage);

      btn.disabled = false;
      btnText.textContent = paymentMethod === 'bank-transfer' ? 'üè¶ Sipari≈üi Tamamla' : 'üì¶ Sipari≈üi Tamamla';
      return;
    }
  }

  // ‚úÖ ONLƒ∞NE √ñDEME - ƒ∞yzico'ya y√∂nlendir
  try {
    const response = await fetch('/api/create-payment', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        items,
        buyer,
        shippingAddress,
        billingAddress: billingAddressObj,
        // ‚úÖ YENƒ∞ ALANLAR (addressTitle kaldƒ±rƒ±ldƒ±)
        invoiceType,
        companyName,
        taxOffice,
        taxNumber,
        orderNote,
        appliedCoupons,
        isDifferentBilling,
      }),
    });

    if (!response.ok) {
      const errorText = await response.text();
      console.error('‚ùå API Hatasƒ±:', errorText);
      throw new Error('√ñdeme ba≈ülatƒ±lamadƒ±. L√ºtfen tekrar deneyin.');
    }

    const data = await response.json();

    if (data.success && data.paymentPageUrl) {
      window.location.href = data.paymentPageUrl;
    } else {
      throw new Error(data.error || '√ñdeme ba≈ülatƒ±lamadƒ±!');
    }
  } catch (err) {
    console.error('‚ùå √ñdeme hatasƒ±:', err);
    const errorMessage = err instanceof Error ? err.message : 'Bilinmeyen bir hata olu≈ütu';
    alert('√ñdeme Hatasƒ±: ' + errorMessage);

    btn.disabled = false;
    btnText.textContent = 'üí≥ √ñdemeye Ge√ß';
  }
}

document.addEventListener('DOMContentLoaded', () => {
  loadCart();

  const checkoutBtn = document.getElementById('checkout-btn');
  if (checkoutBtn) {
    checkoutBtn.addEventListener('click', handleCheckout);
  }

  const phoneInput = document.getElementById('buyer-phone');
  phoneInput?.addEventListener('input', (e) => {
    const input = e.target as HTMLInputElement;
    input.value = input.value.replace(/\D/g, '').substring(0, 10);
  });

  const identityInput = document.getElementById('buyer-identity');
  identityInput?.addEventListener('input', (e) => {
    const input = e.target as HTMLInputElement;
    input.value = input.value.replace(/\D/g, '').substring(0, 11);
  });

  const taxNumberInput = document.getElementById('tax-number');
  taxNumberInput?.addEventListener('input', (e) => {
    const input = e.target as HTMLInputElement;
    input.value = input.value.replace(/\D/g, '').substring(0, 10);
  });

  const applyCouponBtn = document.getElementById('apply-coupon');
  if (applyCouponBtn) {
    applyCouponBtn.addEventListener('click', applyCoupon);
  }

  const couponInput = document.getElementById('coupon-input');
  couponInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      applyCoupon();
    }
  });

  // ‚úÖ Adres ba≈ülƒ±ƒüƒ± se√ßimi
  document.querySelectorAll('.address-title-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const title = target.dataset.title || '';

      document.querySelectorAll('.address-title-btn').forEach(b => b.classList.remove('active'));
      target.classList.add('active');

      const customInput = document.getElementById('custom-address-title') as HTMLInputElement;
      const hiddenInput = document.getElementById('selected-address-title') as HTMLInputElement;

      if (title === 'Diƒüer') {
        customInput.classList.remove('hidden');
        customInput.required = true;
        hiddenInput.value = '';
      } else {
        customInput.classList.add('hidden');
        customInput.required = false;
        hiddenInput.value = title;
      }
    });
  });

  // ‚úÖ Fatura tipi deƒüi≈üimi
  document.querySelectorAll('input[name="invoice-type"]').forEach(radio => {
    radio.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      const corporateFields = document.getElementById('corporate-fields');
      const companyName = document.getElementById('company-name') as HTMLInputElement;
      const taxOffice = document.getElementById('tax-office') as HTMLInputElement;
      const taxNumber = document.getElementById('tax-number') as HTMLInputElement;

      if (target.value === 'corporate') {
        corporateFields?.classList.remove('hidden');
        if (companyName) companyName.required = true;
        if (taxOffice) taxOffice.required = true;
        if (taxNumber) taxNumber.required = true;
      } else {
        corporateFields?.classList.add('hidden');
        if (companyName) companyName.required = false;
        if (taxOffice) taxOffice.required = false;
        if (taxNumber) taxNumber.required = false;
      }
    });
  });

  // ‚úÖ Fatura adresi farklƒ± checkbox
  const differentBillingCheckbox = document.getElementById('different-billing-address') as HTMLInputElement;
  differentBillingCheckbox?.addEventListener('change', (e) => {
    const target = e.target as HTMLInputElement;
    const billingFields = document.getElementById('billing-address-fields');
    const billingAddressInput = document.getElementById('billing-address') as HTMLTextAreaElement;
    const billingCitySelect = document.getElementById('billing-city') as HTMLSelectElement;

    if (target.checked) {
      billingFields?.classList.remove('hidden');
      if (billingAddressInput) billingAddressInput.required = true;
      if (billingCitySelect) billingCitySelect.required = true;
    } else {
      billingFields?.classList.add('hidden');
      if (billingAddressInput) billingAddressInput.required = false;
      if (billingCitySelect) billingCitySelect.required = false;
    }
  });

  // ‚úÖ √ñdeme y√∂ntemi deƒüi≈üimi
  document.querySelectorAll('input[name="payment-method"]').forEach(radio => {
    radio.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      const cashWarning = document.getElementById('cash-warning');
      const bankInfo = document.getElementById('bank-info');
      const checkoutBtn = document.getElementById('checkout-btn-text');

      // T√ºm uyarƒ±larƒ± gizle
      cashWarning?.classList.add('hidden');
      bankInfo?.classList.add('hidden');

      if (target.value === 'cash-on-delivery') {
        cashWarning?.classList.remove('hidden');
        if (checkoutBtn) {
          checkoutBtn.textContent = 'üì¶ Sipari≈üi Tamamla';
        }
      } else if (target.value === 'bank-transfer') {
        bankInfo?.classList.remove('hidden');
        if (checkoutBtn) {
          checkoutBtn.textContent = 'üè¶ Sipari≈üi Tamamla';
        }
      } else {
        if (checkoutBtn) {
          checkoutBtn.textContent = 'üí≥ √ñdemeye Ge√ß';
        }
      }
    });
  });
});
