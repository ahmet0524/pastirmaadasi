    }
  } catch (err) {
    console.error('‚ùå √ñdeme hatasƒ±:', err);
    const errorMessage = err instanceof Error ? err.message : 'Bilinmeyen bir hata olu≈ütu';
    alert('√ñdeme Hatasƒ±: ' + errorMessage);

    btn.disabled = false;
    btnText.textContent = 'üí≥ √ñdemeye Ge√ß';
  }
}

