<script>
import { supabase } from '../lib/supabase';

interface CartItem {
  id: string;
  productId: string;
  name: string;
  price: number;
  image: string;
  unit: string;
  quantity: number;
  availableVariants?: any[];
}

interface AppliedCoupon {
  code: string;
  percent: number;
  discountAmount: number;
}

let cart: CartItem[] = [];
let appliedCoupons: AppliedCoupon[] = [];

(window as any).renderCart = function renderCart() {
  const cartContainer = document.getElementById('cart-items');
  const emptyCart = document.getElementById('empty-cart');
  const checkoutBtn = document.getElementById('checkout-btn') as HTMLButtonElement | null;

  if (!cartContainer || !emptyCart) return;

  if (cart.length === 0) {
    cartContainer.innerHTML = '';
    emptyCart.classList.remove('hidden');
    if (checkoutBtn) checkoutBtn.disabled = true;
    return;
  }

  emptyCart.classList.add('hidden');
  if (checkoutBtn) checkoutBtn.disabled = false;

  cartContainer.innerHTML = cart.map((item, index) => {
    const displayName = item.name || '√úr√ºn';

    let variantButtons = '';
    if (item.availableVariants && item.availableVariants.length > 1) {
      variantButtons = `
        <div class="variant-selector-inline">
          <label class="variant-label">
            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1.323l3.954 1.582 1.599-.8a1 1 0 01.894 1.79l-1.233.616 1.738 5.42a1 1 0 01-.285 1.05A3.989 3.989 0 0115 15a3.989 3.989 0 01-2.667-1.019 1 1 0 01-.285-1.05l1.715-5.349L11 6.477V16h2a1 1 0 110 2H7a1 1 0 110-2h2V6.477L6.237 7.582l1.715 5.349a1 1 0 01-.285 1.05A3.989 3.989 0 015 15a3.989 3.989 0 01-2.667-1.019 1 1 0 01-.285-1.05l1.738-5.42-1.233-.617a1 1 0 01.894-1.788l1.599.799L9 4.323V3a1 1 0 011-1zm-5 8.274l-.818 2.552c.25.112.526.174.818.174.292 0 .569-.062.818-.174L5 10.274zm10 0l-.818 2.552c.25.112.526.174.818.174.292 0 .569-.062.818-.174L15 10.274z" clip-rule="evenodd"/>
            </svg>
            Gramaj Se√ßin
          </label>
          <div class="variant-buttons">
            ${item.availableVariants.map((variant: any) => `
              <button
                class="variant-btn-inline ${variant.label === item.unit ? 'active' : ''}"
                data-index="${index}"
                data-label="${variant.label}"
                data-price="${variant.price}"
              >
                ${variant.label}<br><strong>${variant.price}‚Ç∫</strong>
              </button>
            `).join('')}
          </div>
        </div>
      `;
    }

    return `
    <div class="cart-item">
      <div class="cart-item-image">
        <img src="${item.image}" alt="${displayName}" loading="lazy">
      </div>
      <div class="cart-item-info">
        <h3>${displayName}</h3>
        <p class="cart-item-price">${item.price.toFixed(2)}‚Ç∫ / ${item.unit}</p>
        ${variantButtons}
        <div class="quantity-controls">
          <button class="qty-btn decrease-qty" data-index="${index}" aria-label="Azalt">‚àí</button>
          <span class="qty-amount">${item.quantity}</span>
          <button class="qty-btn increase-qty" data-index="${index}" aria-label="Artƒ±r">+</button>
        </div>
      </div>
      <div class="cart-item-actions">
        <button class="remove-btn" data-index="${index}" title="Sepetten √áƒ±kar" aria-label="Sil">üóëÔ∏è</button>
        <p class="cart-item-total">${(item.price * item.quantity).toFixed(2)}‚Ç∫</p>
      </div>
    </div>
  `;
  }).join('');

  // Event listeners
  document.querySelectorAll('.increase-qty').forEach(btn => {
    btn.addEventListener('click', e => {
      const index = parseInt((e.currentTarget as HTMLElement).dataset.index || '0');
      cart[index].quantity++;
      saveCart();
    });
  });

  document.querySelectorAll('.decrease-qty').forEach(btn => {
    btn.addEventListener('click', e => {
      const index = parseInt((e.currentTarget as HTMLElement).dataset.index || '0');
      if (cart[index].quantity > 1) {
        cart[index].quantity--;
        saveCart();
      }
    });
  });

  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', e => {
      const index = parseInt((e.currentTarget as HTMLElement).dataset.index || '0');
      if (confirm('Bu √ºr√ºn√º sepetten √ßƒ±karmak istediƒüinize emin misiniz?')) {
        cart.splice(index, 1);
        saveCart();
      }
    });
  });

  document.querySelectorAll('.variant-btn-inline').forEach(btn => {
    btn.addEventListener('click', e => {
      const target = e.currentTarget as HTMLElement;
      const index = parseInt(target.dataset.index || '0');
      const newLabel = target.dataset.label || '';
      const newPrice = parseFloat(target.dataset.price || '0');

      if (newLabel && newPrice) {
        document.querySelectorAll(`.variant-btn-inline[data-index="${index}"]`).forEach(b => {
          b.classList.remove('active');
        });

        target.classList.add('active');

        cart[index] = {
          ...cart[index],
          unit: newLabel,
          price: newPrice,
          id: `${cart[index].productId}_${newLabel}`
        };

        saveCart();
      }
    });
  });
}

function saveCart() {
  localStorage.setItem('cart', JSON.stringify(cart));
  localStorage.setItem('appliedCoupons', JSON.stringify(appliedCoupons));
  (window as any).renderCart();
  updateSummary();
  window.dispatchEvent(new Event('cartUpdated'));
}

function loadCart() {
  cart = JSON.parse(localStorage.getItem('cart') || '[]');
  appliedCoupons = JSON.parse(localStorage.getItem('appliedCoupons') || '[]');
  (window as any).renderCart();
  updateSummary();
  renderAppliedCoupons();
}

function calculateSubtotal(): number {
  return cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
}

function calculateTotalDiscount(subtotal: number): number {
  return appliedCoupons.reduce((total, coupon) => {
    return total + ((subtotal * coupon.percent) / 100);
  }, 0);
}

function updateSummary() {
  const subtotal = calculateSubtotal();
  const shipping = subtotal >= 1000 ? 0 : 50;
  const totalDiscount = calculateTotalDiscount(subtotal);
  const total = subtotal + shipping - totalDiscount;

  const subtotalEl = document.getElementById('subtotal');
  const shippingEl = document.getElementById('shipping');
  const discountEl = document.getElementById('discount');
  const discountRowEl = document.getElementById('discount-row');
  const totalEl = document.getElementById('total');

  if (subtotalEl) subtotalEl.textContent = `${subtotal.toFixed(2)}‚Ç∫`;
  if (shippingEl) shippingEl.textContent = shipping === 0 ? '√úcretsiz' : `${shipping.toFixed(2)}‚Ç∫`;
  if (discountEl) discountEl.textContent = `-${totalDiscount.toFixed(2)}‚Ç∫`;
  if (discountRowEl) discountRowEl.classList.toggle('hidden', totalDiscount === 0);
  if (totalEl) totalEl.textContent = `${total.toFixed(2)}‚Ç∫`;
}

function renderAppliedCoupons() {
  const container = document.getElementById('applied-coupons-list');
  if (!container) return;

  if (appliedCoupons.length === 0) {
    container.innerHTML = '';
    return;
  }

  container.innerHTML = appliedCoupons.map(coupon => `
    <div class="applied-coupon-tag">
      <span class="coupon-code">${coupon.code}</span>
      <span class="coupon-discount">-%${coupon.percent}</span>
      <button class="remove-coupon-btn" data-code="${coupon.code}" title="Kuponu Kaldƒ±r">√ó</button>
    </div>
  `).join('');

  document.querySelectorAll('.remove-coupon-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const code = (e.currentTarget as HTMLElement).dataset.code;
      if (code) {
        removeCoupon(code);
      }
    });
  });
}

function removeCoupon(code: string) {
  appliedCoupons = appliedCoupons.filter(c => c.code !== code);
  saveCart();
  renderAppliedCoupons();

  const couponMessage = document.getElementById('coupon-message');
  if (couponMessage) {
    couponMessage.textContent = `üóëÔ∏è "${code}" kuponu kaldƒ±rƒ±ldƒ±`;
    couponMessage.className = 'coupon-message error';
    couponMessage.classList.remove('hidden');
    setTimeout(() => couponMessage.classList.add('hidden'), 3000);
  }
}

async function applyCoupon() {
  const couponInput = document.getElementById('coupon-input') as HTMLInputElement;
  const couponMessage = document.getElementById('coupon-message');
  const applyBtn = document.getElementById('apply-coupon') as HTMLButtonElement;

  const couponCode = couponInput?.value.toUpperCase().trim();

  if (!couponCode || !couponMessage) return;

  if (appliedCoupons.some(c => c.code === couponCode)) {
    couponMessage.textContent = '‚ö†Ô∏è Bu kupon zaten uygulanmƒ±≈ü!';
    couponMessage.className = 'coupon-message error';
    couponMessage.classList.remove('hidden');
    setTimeout(() => couponMessage.classList.add('hidden'), 3000);
    return;
  }

  if (applyBtn) {
    applyBtn.disabled = true;
    applyBtn.textContent = '‚è≥ Kontrol ediliyor...';
  }

  try {
    const { data: coupon, error } = await supabase
      .from('coupons')
      .select('*')
      .eq('code', couponCode)
      .eq('is_active', true)
      .single();

    if (error || !coupon) {
      throw new Error('Ge√ßersiz kupon kodu!');
    }

    const now = new Date();

    if (coupon.valid_from) {
      const validFrom = new Date(coupon.valid_from);
      if (now < validFrom) {
        throw new Error('Bu kupon hen√ºz aktif deƒüil!');
      }
    }

    if (coupon.valid_until) {
      const validUntil = new Date(coupon.valid_until);
      if (now > validUntil) {
        throw new Error('Bu kuponun s√ºresi dolmu≈ü!');
      }
    }

    if (coupon.usage_limit && coupon.used_count >= coupon.usage_limit) {
      throw new Error('Bu kuponun kullanƒ±m limiti dolmu≈ü!');
    }

    const subtotal = calculateSubtotal();
    if (coupon.min_order_amount && subtotal < coupon.min_order_amount) {
      throw new Error(`Bu kupon i√ßin minimum sipari≈ü tutarƒ± ${coupon.min_order_amount}‚Ç∫`);
    }

    const discountAmount = (subtotal * coupon.discount_percent) / 100;

    appliedCoupons.push({
      code: coupon.code,
      percent: coupon.discount_percent,
      discountAmount: discountAmount
    });

    saveCart();
    renderAppliedCoupons();

    couponMessage.textContent = `‚úÖ "${coupon.code}" kuponu uygulandƒ±! -%${coupon.discount_percent}`;
    couponMessage.className = 'coupon-message success';
    couponMessage.classList.remove('hidden');

    if (couponInput) couponInput.value = '';

    setTimeout(() => couponMessage.classList.add('hidden'), 5000);

  } catch (error: any) {
    couponMessage.textContent = `‚ùå ${error.message}`;
    couponMessage.className = 'coupon-message error';
    couponMessage.classList.remove('hidden');
    setTimeout(() => couponMessage.classList.add('hidden'), 5000);
  } finally {
    if (applyBtn) {
      applyBtn.disabled = false;
      applyBtn.textContent = 'Uygula';
    }
  }
}

