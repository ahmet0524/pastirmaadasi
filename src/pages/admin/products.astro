      .form-row {
        grid-template-columns: 1fr;
      }

      .admin-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .btn-primary {
        width: 100%;
      }
    }
  </style>

  <script>
    import { supabase } from '../../lib/supabase';
    import { createRoot } from 'react-dom/client';
    import { ImageUpload } from '../../components/ImageUpload';
    import { createElement } from 'react';

    let imageUploadRoot = null;
    let currentImageUrl = '';

    const modal = document.getElementById('product-modal');
    const modalTitle = document.getElementById('modal-title');
    const productForm = document.getElementById('product-form');
    const addBtn = document.getElementById('add-product-btn');
    const closeButtons = document.querySelectorAll('.modal-close');
    const submitBtn = document.getElementById('submit-btn');

    // Varyant sistemi
    let variantCounter = 0;
    const hasVariantsCheckbox = document.getElementById('has_variants');
    const variantsSection = document.getElementById('variants-section');
    const singlePriceSection = document.getElementById('single-price-section');
    const variantsList = document.getElementById('variants-list');
    const addVariantBtn = document.getElementById('add-variant-btn');

    // Logout
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/admin/login';
    });

    // Slug olu≈ütur
    function createSlug(text) {
      return text
        .toLowerCase()
        .replace(/ƒü/g, 'g')
        .replace(/√º/g, 'u')
        .replace(/≈ü/g, 's')
        .replace(/ƒ±/g, 'i')
        .replace(/√∂/g, 'o')
        .replace(/√ß/g, 'c')
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
    }

    // ƒ∞sim deƒüi≈ütiƒüinde slug olu≈ütur
    document.getElementById('name')?.addEventListener('input', (e) => {
      const slugInput = document.getElementById('slug');
      if (slugInput && !slugInput.value) {
        slugInput.value = createSlug(e.target.value);
      }
    });

    // Kategori deƒüi≈ütiƒüinde alt kategori alanƒ±nƒ± g√∂ster/gizle
    document.getElementById('category')?.addEventListener('change', (e) => {
      const subcategoryGroup = document.getElementById('subcategory-group');
      const subcategorySelect = document.getElementById('subcategory');

      if (e.target.value === 'sarkuteri') {
        subcategoryGroup.style.display = 'block';
        subcategorySelect.required = true;
      } else {
        subcategoryGroup.style.display = 'none';
        subcategorySelect.required = false;
        subcategorySelect.value = '';
      }
    });

    // Varyant checkbox toggle
    hasVariantsCheckbox?.addEventListener('change', (e) => {
      if (e.target.checked) {
        variantsSection.style.display = 'block';
        singlePriceSection.style.display = 'none';
        if (variantsList.children.length === 0) {
          addVariant();
        }
      } else {
        variantsSection.style.display = 'none';
        singlePriceSection.style.display = 'block';
      }
    });

    // Varyant ekleme fonksiyonu
    function addVariant(data = null) {
      const variantId = variantCounter++;
      const variantCard = document.createElement('div');
      variantCard.className = 'variant-card';
      variantCard.dataset.variantId = variantId;

      variantCard.innerHTML = `
        <button type="button" class="variant-remove" onclick="window.removeVariant(${variantId})" title="Varyantƒ± Sil">√ó</button>
        <div class="form-row" style="grid-template-columns: 2fr 1.5fr 1fr;">
          <div class="form-group">
            <label>Gramaj/Boyut</label>
            <input type="text" class="variant-label" required placeholder="√ñrn: 250gr, 500gr, 1kg" />
            <small>M√º≈üterinin g√∂receƒüi etiket</small>
          </div>
          <div class="form-group">
            <label>Fiyat (‚Ç∫)</label>
            <input type="number" class="variant-price" step="0.01" required placeholder="0.00" />
          </div>
          <div class="form-group">
            <label>Stok</label>
            <input type="number" class="variant-stock" value="100" min="0" />
          </div>
        </div>
      `;

      if (data) {
        variantCard.querySelector('.variant-label').value = data.label || data.size || '';
        variantCard.querySelector('.variant-price').value = data.price;
        variantCard.querySelector('.variant-stock').value = data.stock || 100;
      }

      variantsList.appendChild(variantCard);
    }

    // Varyant silme fonksiyonu
    window.removeVariant = function(variantId) {
      const card = document.querySelector(`[data-variant-id="${variantId}"]`);
      if (card) {
        card.remove();
      }
    };

    // Varyant ekle butonu
    addVariantBtn?.addEventListener('click', () => addVariant());

    // ‚úÖ React ImageUpload Component'ini render et
    function renderImageUpload(currentImage = '') {
      const container = document.getElementById('image-upload-container');
      if (!container) return;

      if (imageUploadRoot) {
        imageUploadRoot.unmount();
      }

      imageUploadRoot = createRoot(container);

      imageUploadRoot.render(
        createElement(ImageUpload, {
          currentImage: currentImage,
          onImageUploaded: (imageUrl) => {
            console.log('‚úÖ Resim y√ºklendi:', imageUrl);
            currentImageUrl = imageUrl;
            const hiddenInput = document.getElementById('product-image-url');
            if (hiddenInput) {
              hiddenInput.value = imageUrl;
            }
          },
          label: ''
        })
      );
    }

    // Modal a√ß/kapat
    function openModal(product = null) {
      modal?.classList.add('show');

      variantsList.innerHTML = '';
      variantCounter = 0;
      currentImageUrl = '';

      if (product) {
        modalTitle.textContent = '‚úèÔ∏è √úr√ºn D√ºzenle';
        document.getElementById('product-id').value = product.id;
        document.getElementById('name').value = product.name;
        document.getElementById('slug').value = product.slug || '';
        document.getElementById('category').value = product.category || 'pastirma';

        const subcategoryGroup = document.getElementById('subcategory-group');
        const subcategorySelect = document.getElementById('subcategory');
        if (product.category === 'sarkuteri') {
          subcategoryGroup.style.display = 'block';
          subcategorySelect.required = true;
          subcategorySelect.value = product.subcategory || '';
        } else {
          subcategoryGroup.style.display = 'none';
          subcategorySelect.required = false;
        }

        document.getElementById('unit').value = product.unit || 'kg';
        document.getElementById('description').value = product.description || '';
        document.getElementById('sort_order').value = product.sort_order || 0;
        document.getElementById('is_active').checked = product.is_active !== false;

        // ‚úÖ Mevcut resmi al
        const existingImage = (product.images && Array.isArray(product.images) && product.images.length > 0)
          ? product.images[0]
          : '';

        currentImageUrl = existingImage;
        renderImageUpload(existingImage);

        if (product.variants && Array.isArray(product.variants) && product.variants.length > 0) {
          hasVariantsCheckbox.checked = true;
          variantsSection.style.display = 'block';
          singlePriceSection.style.display = 'none';

          product.variants.forEach(variant => {
            addVariant(variant);
          });
        } else {
          hasVariantsCheckbox.checked = false;
          variantsSection.style.display = 'none';
          singlePriceSection.style.display = 'block';
          document.getElementById('price').value = product.price;
          document.getElementById('stock').value = product.stock || 100;
        }
      } else {
        modalTitle.textContent = 'üÜï Yeni √úr√ºn Ekle';
        productForm?.reset();
        document.getElementById('product-id').value = '';
        document.getElementById('is_active').checked = true;
        document.getElementById('stock').value = '100';
        document.getElementById('sort_order').value = '0';
        hasVariantsCheckbox.checked = false;
        variantsSection.style.display = 'none';
        singlePriceSection.style.display = 'block';

        document.getElementById('subcategory-group').style.display = 'none';
        document.getElementById('subcategory').required = false;

        renderImageUpload('');
      }
    }

    function closeModal() {
      modal?.classList.remove('show');
      productForm?.reset();
      variantsList.innerHTML = '';
      variantCounter = 0;
      currentImageUrl = '';

      if (imageUploadRoot) {
        imageUploadRoot.unmount();
        imageUploadRoot = null;
      }
    }

    addBtn?.addEventListener('click', () => openModal());
    closeButtons.forEach(btn => btn.addEventListener('click', closeModal));
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Edit buttons
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const product = JSON.parse(e.currentTarget.dataset.product);
        openModal(product);
      });
    });

    // Delete buttons
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = e.currentTarget.dataset.id;
        const name = e.currentTarget.dataset.name;

        if (!confirm(`"${name}" √ºr√ºn√ºn√º silmek istediƒüinizden emin misiniz?`)) return;

        try {
          const { error } = await supabase
            .from('products')
            .delete()
            .eq('id', id);

          if (error) throw error;

          alert('‚úÖ √úr√ºn silindi!');
          location.reload();
        } catch (error) {
          console.error('Error:', error);
          alert('‚ùå Hata: ' + error.message);
        }
      });
    });

    // Form submit
    productForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const id = document.getElementById('product-id').value;

      // ‚úÖ Resim URL'ini al
      const imageUrl = document.getElementById('product-image-url').value || currentImageUrl;

      if (!imageUrl) {
        alert('‚ö†Ô∏è L√ºtfen bir √ºr√ºn resmi y√ºkleyin!');
        return;
      }

      const images = [imageUrl];

      // Varyantlarƒ± topla
      let variants = null;
      let price = 0;
      let stock = 0;

      if (hasVariantsCheckbox.checked) {
        variants = [];
        const variantCards = variantsList.querySelectorAll('.variant-card');

        if (variantCards.length === 0) {
          alert('‚ùå En az bir varyant eklemelisiniz!');
          return;
        }

        variantCards.forEach(card => {
          const variantLabel = card.querySelector('.variant-label').value.trim();
          const variantPrice = parseFloat(card.querySelector('.variant-price').value);
          const variantStock = parseInt(card.querySelector('.variant-stock').value) || 0;

          if (!variantLabel || !variantPrice) {
            alert('‚ùå T√ºm varyant alanlarƒ±nƒ± doldurun!');
            return;
          }

          variants.push({
            label: variantLabel,
            price: variantPrice,
            stock: variantStock,
            value: parseFloat(variantLabel.replace(/[^\d.]/g, '')) / 1000 || 0
          });

          stock += variantStock;
        });

        price = variants[0].price;
      } else {
        price = parseFloat(document.getElementById('price').value);
        stock = parseInt(document.getElementById('stock').value);

        if (!price || price <= 0) {
          alert('‚ùå Ge√ßerli bir fiyat giriniz!');
          return;
        }
      }

      const formData = {
        name: document.getElementById('name').value,
        slug: document.getElementById('slug').value,
        category: document.getElementById('category').value,
        subcategory: document.getElementById('category').value === 'sarkuteri'
          ? document.getElementById('subcategory').value
          : null,
        unit: document.getElementById('unit').value,
        price: price,
        stock: stock,
        description: document.getElementById('description').value,
        images: images,
        variants: variants,
        sort_order: parseInt(document.getElementById('sort_order').value),
        is_active: document.getElementById('is_active').checked
      };

      console.log('üì¶ Kaydedilecek veri:', formData);

      try {
        submitBtn.disabled = true;
        submitBtn.textContent = '‚è≥ Kaydediliyor...';

        let result;
        if (id) {
          result = await supabase
            .from('products')
            .update(formData)
            .eq('id', id);
        } else {
          result = await supabase
            .from('products')
            .insert(formData);
        }

        if (result.error) throw result.error;

        alert(id ? '‚úÖ √úr√ºn g√ºncellendi!' : '‚úÖ √úr√ºn eklendi!');
        location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert('‚ùå Hata: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'üíæ Kaydet';
      }
    });

    // ESC tu≈üu ile kapat
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.classList.contains('show')) {
        closeModal();
      }
    });
  </script>
</BaseLayout>