      transition: all 0.2s;
    }

    .nav-item:hover {
      background: rgba(255, 255, 255, 0.05);
      color: white;
    }

    .nav-item.active {
      background: rgba(212, 175, 55, 0.1);
      color: #d4af37;
      border-left: 3px solid #d4af37;
    }

    .sidebar-footer {
      padding: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .admin-main {
      padding: 2rem;
      overflow-y: auto;
    }

    .admin-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .admin-header h1 {
      font-size: 2rem;
      margin-bottom: 0.25rem;
      color: #1f2937;
    }

