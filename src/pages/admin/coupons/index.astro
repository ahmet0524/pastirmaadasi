      top: 0;
      height: 100vh;
    }

    .sidebar-header {
      padding: 2rem 1.5rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sidebar-header h2 {
      color: #d4af37;
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .sidebar-header p {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.875rem;
    }

    .sidebar-nav {
      flex: 1;
      padding: 1.5rem 0;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1.5rem;
      color: rgba(255, 255, 255, 0.7);
