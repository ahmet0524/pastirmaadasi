              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <div class="stat-value">{totalUsage}</div>
            <div class="stat-label">Toplam Kullanƒ±m</div>
          </div>
        </div>
      </div>

      {coupons.length === 0 ? (
        <div class="empty-state">
          <svg width="80" height="80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          <h3>Hen√ºz kupon yok</h3>
          <p>ƒ∞lk indirim kuponunuzu olu≈üturarak ba≈ülayƒ±n!</p>
          <a href="/admin/coupons/new" class="btn btn-primary" style="margin-top: 1.5rem;">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            ƒ∞lk Kuponu Olu≈ütur
          </a>
        </div>
      ) : (
        <div class="coupons-grid">
          {coupons.map((coupon) => {
            const now = new Date();
            const validUntil = coupon.valid_until ? new Date(coupon.valid_until) : null;
            const isExpired = validUntil && now > validUntil;
            const isLimitReached = coupon.usage_limit && coupon.used_count >= coupon.usage_limit;
            const isActive = coupon.is_active && !isExpired && !isLimitReached;

            return (
              <div class={`coupon-card ${!isActive ? 'inactive' : ''}`}>
                <div class="coupon-header">
                  <div class="coupon-code-wrapper">
                    <div class="coupon-code">{coupon.code}</div>
                    <button class="copy-btn" data-code={coupon.code} title="Kodu Kopyala">
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                    </button>
                  </div>
                  <div class="coupon-discount">
                    <span class="discount-value">%{coupon.discount_percent}</span>
                    <span class="discount-label">ƒ∞ndirim</span>
                  </div>
                </div>

                <div class="coupon-body">
                  <div class="info-grid">
                    <div class="info-item">
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <div>
                        <div class="info-label">Min. Sipari≈ü</div>
                        <div class="info-value">{coupon.min_order_amount || 0}‚Ç∫</div>
                      </div>
                    </div>

                    <div class="info-item">
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                      <div>
                        <div class="info-label">Max. ƒ∞ndirim</div>
                        <div class="info-value">{coupon.max_discount_amount ? `${coupon.max_discount_amount}‚Ç∫` : '‚àû'}</div>
                      </div>
                    </div>

                    <div class="info-item">
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                      </svg>
                      <div>
                        <div class="info-label">Kullanƒ±m</div>
                        <div class="info-value">{coupon.used_count} / {coupon.usage_limit || '‚àû'}</div>
                      </div>
                    </div>

                    {validUntil && (
                      <div class="info-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <div>
                          <div class="info-label">Ge√ßerlilik</div>
                          <div class="info-value">{validUntil.toLocaleDateString('tr-TR', { day: '2-digit', month: 'short' })}</div>
                        </div>
                      </div>
                    )}
                  </div>

                  <div class="coupon-status-bar">
                    {isExpired && <span class="status-badge badge-error">‚è∞ S√ºresi Doldu</span>}
                    {isLimitReached && <span class="status-badge badge-error">üö´ Limit Doldu</span>}
                    {!coupon.is_active && <span class="status-badge badge-warning">‚è∏Ô∏è Pasif</span>}
                    {isActive && <span class="status-badge badge-success">‚úÖ Aktif</span>}
                  </div>
                </div>

                <div class="coupon-actions">
                  <button
                    class="action-btn toggle-btn"
                    data-id={coupon.id}
                    data-active={coupon.is_active}
                    title={coupon.is_active ? 'Pasif Yap' : 'Aktif Yap'}
                  >
                    {coupon.is_active ? (
                      <>
                        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                        </svg>
                        Pasif Yap
                      </>
                    ) : (
                      <>
                        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Aktif Yap
                      </>
                    )}
                  </button>

                  <button class="action-btn delete-btn" data-id={coupon.id} data-code={coupon.code} title="Kuponu Sil">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Sil
                  </button>
                </div>
              </div>
            );
          })}
        </div>
      )}
    </main>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
