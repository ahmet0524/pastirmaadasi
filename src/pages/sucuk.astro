---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { supabase } from '../lib/supabase';

// ðŸŽ¯ Supabase'den Sucuk kategorisindeki Ã¼rÃ¼nleri Ã§ek
const { data: products, error } = await supabase
  .from('products')
  .select('*')
  .eq('category', 'Sucuk')
  .eq('is_active', true);

if (error) {
  console.error('Supabase hatasÄ±:', error);
}

const product = products?.[0];
if (!product) {
  return Astro.redirect('/404');
}

---

<BaseLayout title={`${product.name} - PastÄ±rma AdasÄ±`} description={product.description}>
  <Header slot="header" />

  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="hero-title">{product.name}</h1>
      <p class="hero-subtitle">KatkÄ±sÄ±z, doÄŸal ve lezzetli sucuk</p>
    </div>
  </section>

  <section class="product-section">
    <div class="container">
      <div class="product-grid">
        <div class="product-image">
          {(Array.isArray(product.images) ? product.images : [product.images]).map((img, i) => (
            <img src={img} alt={`${product.name}-${i}`} />
          ))}
        </div>
        <div class="product-info">
          <h2>{product.name}</h2>
          <p>{product.description}</p>
          <p class="price">{product.price.toLocaleString('tr-TR')}â‚º</p>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .hero-section {
    background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
    padding: 5rem 1rem;
    text-align: center;
    color: #006064;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #00838f;
  }

  .product-section {
    padding: 4rem 1rem;
    background: white;
  }

  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-image img {
    width: 100%;
    border-radius: 12px;
  }

  .product-info h2 {
    font-size: 2rem;
    color: #004d40;
  }

  .product-info p {
    color: #006064;
    line-height: 1.6;
  }

  .price {
    font-size: 1.75rem;
    font-weight: bold;
    color: #0097a7;
  }

  .btn-primary {
    background: #00bcd4;
    color: white;
  }

  .btn-primary:hover {
    background: #00838f;
  }

  .footer {
    background: #e0f7fa;
  }
</style>