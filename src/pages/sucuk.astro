      console.log('Image Complete:', img?.complete);

      // Eƒüer placeholder kullanƒ±lƒ±yorsa
      if (img?.src.includes('placeholder.jpg')) {
        console.warn('‚ö†Ô∏è PLACEHOLDER USED!');
