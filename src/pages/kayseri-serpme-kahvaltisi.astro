---
// src/pages/kayseri-serpme-kahvaltisi.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Kayseri Serpme Kahvaltı - Pastırma Adası">
  <div class="container">
    <div class="hero-section">
      <h1>Pastırma Adası - Kayseri Serpme Kahvaltı</h1>
      <p>Kayseri'nin en özel serpme kahvaltı menülerini keşfedin</p>
    </div>

    <div class="menu-grid">
      <!-- Kayseri Serpme Kahvaltı -->
      <div class="menu-card">
        <div class="menu-header">
          <h2 class="menu-title">Kayseri Serpme Kahvaltı</h2>
          <div class="price-badge">575₺ / Kişi</div>
        </div>

        <div class="serving-info">
          • En az iki kişilik servis edilir.<br>
          • Ekstra servis ücreti yoktur.
        </div>

        <div class="menu-section">
          <div class="section-title">Özel Kayseri Tabağı</div>
          <div class="items-list">Pastırma, Füme Et, Dana Salam, Çubuk Sucuk / Varyanta Sucuk</div>
        </div>

        <div class="menu-section">
          <div class="section-title">Peynir Tabağı</div>
          <div class="items-list">
            Kars Eski Kaşar / Uzunyayla Çerkez Peyniri
            Erzincan Tulum Peyniri / Ezine Beyaz Peynir
            Hatay Lavaş Peyniri, Çöreotlu Lavaş Peyniri, Çeçil Peyniri
          </div>
        </div>

        <div class="menu-section">
          <div class="section-title">Zeytin Tabağı</div>
          <div class="items-list">Gemlik Siyah, Edremit Yeşil, Hatay Kırma</div>
        </div>

        <div class="menu-section">
          <div class="section-title">Hamur İşleri</div>
          <div class="items-list">Çerkez mutfağından Gubate, Velibah ve Pastırmalı Pişi</div>
        </div>

        <div class="menu-section">
          <div class="section-title">Diğer Lezzetler</div>
          <div class="items-list">
            Doğal üretim Reçeller, Süzme Bal, Taze Kaymak, Tereyağı, Fındık Ezmesi / Helva
            Mevsim Yeşillikleri ve Patates Kızartması
          </div>
        </div>

        <div class="menu-section">
          <div class="section-title">Sahanda Yumurta</div>
          <div class="items-list">
            Pastırmalı, Sucuklu, Kavurmalı, Tereyağlı, Menemen çeşitlerinden seçeceğiniz 2 sahan
          </div>
        </div>

        <img
          class="menu-image-inner"
          src="https://pastirmaadasi.com/wp-content/uploads/2025/08/serpme-kahvalti.webp"
          alt="Serpme Kahvaltı Görseli"
          loading="lazy"
        />
      </div>
    </div>

    <!-- CTA Butonlar -->
    <div class="cta-buttons">
      <a
        class="cta-btn location-btn"
        href="https://maps.google.com/?q=Pastırma+Adası+Kayseri"
        target="_blank"
        rel="noopener"
      >
        📍 Konum Al
      </a>
      <a class="cta-btn call-btn" href="tel:+905077623838">
        📞 Ara
      </a>
    </div>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Georgia', serif;
      line-height: 1.6;
      color: #333;
      background: #faf9f7;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .hero-section {
      text-align: center;
      margin-bottom: 40px;
      padding: 40px 20px;
      background: white;
      border-radius: 20px;
      border: 2px solid #f2e6c9;
      box-shadow: 0 12px 30px rgba(0,0,0,0.05);
    }

    .hero-section h1 {
      font-size: 2.6rem;
      margin-bottom: 15px;
      color: #444;
      font-weight: bold;
    }

    .hero-section p {
      font-size: 1.2rem;
      color: #7a6a35;
    }

    .menu-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }

    .menu-card {
      background: white;
      border-radius: 20px;
      padding: 25px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.08);
      border: 2px solid #f2e6c9;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .menu-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 25px 50px rgba(0,0,0,0.12);
    }

    .menu-header {
      text-align: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #f5f5f5;
    }

    .menu-title {
      font-size: 1.8rem;
      color: #7a6a35;
      margin-bottom: 10px;
      font-weight: bold;
    }

    .price-badge {
      display: inline-block;
      background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
      color: #333;
      padding: 10px 20px;
      border-radius: 25px;
      font-size: 1.2rem;
      font-weight: bold;
      margin: 10px 0;
      box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
    }

    .serving-info {
      background: #faf8f2;
      padding: 10px;
      border-radius: 10px;
      margin: 10px 0;
      border-left: 4px solid #d4af37;
      font-size: 0.95rem;
      color: #555;
    }

    .menu-section {
      margin: 12px 0;
    }

    .section-title {
      font-size: 1.1rem;
      color: #7a6a35;
      margin-bottom: 8px;
      font-weight: bold;
    }

    .items-list {
      color: #555;
      line-height: 1.4;
      white-space: pre-line;
    }

    .menu-image-inner {
      width: 100%;
      height: auto;
      margin-top: 20px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      display: block;
    }

    .cta-buttons {
      display: flex;
      gap: 20px;
      justify-content: center;
      margin-top: 40px;
      flex-wrap: wrap;
    }

    .cta-btn {
      display: inline-block;
      padding: 15px 30px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      text-transform: uppercase;
      color: white;
    }

    .cta-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(0,0,0,0.2);
    }

    .location-btn {
      background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
    }

    .call-btn {
      background: linear-gradient(135deg, #ff6b35 0%, #ff5722 100%);
    }

    @media (max-width: 768px) {
      .hero-section h1 {
        font-size: 2rem;
      }

      .cta-buttons {
        flex-direction: column;
        align-items: center;
      }

      .cta-btn {
        width: 220px;
        text-align: center;
      }
    }
  </style>
