<style>
  .footer-container {
    background: #1a1a1a;
    color: white;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    color: var(--secondary);
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .footer-section p {
    color: #ccc;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: #ccc;
    font-size: 0.9rem;
  }

  .footer-section a:hover {
    color: var(--secondary);
  }

  .contact-list li {
    color: #ccc;
    font-size: 0.9rem;
  }

  .payment-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .payment-icon {
    background: white;
    color: var(--text-dark);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: bold;
  }

  .ssl-text {
    font-size: 0.75rem;
    color: #999;
    margin-top: 0.75rem;
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 1.5rem;
    text-align: center;
  }

  .footer-bottom p {
    color: #999;
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #999;
    font-size: 0.875rem;
  }

  .footer-links a:hover {
    color: var(--secondary);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>